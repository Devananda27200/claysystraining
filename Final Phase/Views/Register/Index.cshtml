@{
    ViewBag.Title = "Register";
}

<h2>Sign up</h2>
<script src="~/Scripts/Register/validation.js"></script>
<script src="~/Scripts/Register/selectState.js"></script>
<div class="container">

    <form action="" method="post" onsubmit="return ValidateForm();">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">First name</div>
                    <input type="text" class="fullwidth form-control" id="jfirstname" name="firstname" pattern="[A-Za-z]+" title="Please enter only letters." />
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Last name</div>
                    <input type="text" class="fullwidth form-control" id="jlastname" name="lastname" pattern="[A-Za-z]+" title="Please enter only letters." />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">Date of birth</div>
                    <input type="date" class="fullwidth form-control" id="jdateofbirth" name="dateofbirth" max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" required />
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Age</div>
                    <input type="text" class="fullwidth form-control" id="jage" name="age" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">
                        Gender
                    </div>
                    <div class="form-label">
                        <input type="radio" id="jmale" name="gender" required />
                        Male
                        <input type="radio" id="jfemale" name="gender" required />
                        Female
                        <input type="radio" id="jothers" name="gender" required />
                        Others
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Phone number</div>
                    <input type="text" class="fullwidth form-control" id="jmobileNumber" name="age" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">Email address</div>
                    <input type="text" class="fullwidth form-control" id="jemailaddress" name="emailaddress" required />
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Confirm email address</div>
                    <input type="text" class="fullwidth form-control" id="jemailaddress2" name="emailaddress2" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">State</div>
                    <select id="states" class="fullwidth form-control" onchange="makeSubmenu(this.value)" required>
                        <option value="" disabled selected>-- Select State --</option>
                        <option>AndhraPradesh</option>
                        <option>ArunachalPradesh</option>
                        <option>Assam</option>
                        <option>Bihar</option>
                        <option>Chhattisgarh</option>
                        <option>Goa</option>
                        <option>Gujarat</option>
                        <option>Kerala</option>
                        <option>Tamilnadu</option>
                    </select>
                </div>
                <div class="col-lg-6">
                    <div class="form-label">City</div>
                    <select id="city" class="fullwidth form-control" required>
                        <option value="" disabled selected>-- Select City --</option>
                        <option></option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">Username</div>
                    <input type="text" class="fullwidth form-control" id="jusername" name="username" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">Login password</div>
                    <input type="password" class="fullwidth form-control" id="jpassword" name="password" required />
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Confirm login password</div>
                    <input type="password" class="fullwidth form-control" id="jpassword2" name="password2" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-label">Shipping address</div>
                    <textarea class="fullwidth form-control" id="jaddress" name="address" style="height:100px;"></textarea>
                </div>
                <div class="col-lg-12">
                    <div class="form-label">Bank details</div>
                    <textarea class="fullwidth form-control" id="jbankdetails" name="bankdetails" style="height:100px;"></textarea>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="pad-6"></div>
                    <label><input type="checkbox" id="jacceptterms" /> I accept E-Shopper Terms &amp; Conditions.</label>
                    <div class="pad-6"></div>
                    <div class="alert alert-danger" style="display:none;" id="jregisteralert"></div>
                    <div class="pad-6"></div>
                    <input class="btn btn-primary btn-lg" type="submit" name="registerRequest" value="Create account" />
                </div>
            </div>
        </div>
    </form>
